# ====================================
# SUPABASE CONFIGURATION (REQUIRED)
# ====================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL for Prisma (from Supabase > Settings > Database)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# ====================================
# UPSTASH REDIS CONFIGURATION (REQUIRED)
# ====================================
# Get these from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL=https://YOUR_ENDPOINT.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# ====================================
# EXTERNAL API INTEGRATIONS (ADD AS NEEDED)
# ====================================
# Vambe CRM
VAMBE_API_KEY=
VAMBE_WEBHOOK_SECRET=

# TOKU Payments
TOKU_API_KEY=
TOKU_WEBHOOK_SECRET=

# Bsale Invoicing
BSALE_API_KEY=

# Blue Express Shipping
BLUE_EXPRESS_API_KEY=
BLUE_EXPRESS_API_SECRET=

# ====================================
# WHATSAPP CONFIGURATION (OPTIONAL - PHASE 2)
# ====================================
# For Development: Twilio Sandbox
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# For Production: Meta Business API
META_WHATSAPP_TOKEN=
META_WHATSAPP_PHONE_ID=

# ====================================
# SECURITY & MONITORING (RECOMMENDED)
# ====================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Cron Job Secret (for scheduled tasks)
CRON_SECRET=generate-a-random-secret-here

# ====================================
# OPTIONAL SERVICES (ADD WHEN READY)
# ====================================
