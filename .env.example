# ====================================
# SUPABASE CONFIGURATION (REQUIRED)
# ====================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL for Prisma (from Supabase > Settings > Database)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# ====================================
# UPSTASH REDIS CONFIGURATION (REQUIRED)
# ====================================
# Get these from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL=https://YOUR_ENDPOINT.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# ====================================
# EXTERNAL API INTEGRATIONS (ADD AS NEEDED)
# ====================================
# Vambe CRM
VAMBE_API_KEY=
VAMBE_WEBHOOK_SECRET=

# TOKU Payments
TOKU_API_KEY=
TOKU_WEBHOOK_SECRET=

# Bsale Invoicing
BSALE_API_KEY=

# Blue Express Shipping
BLUE_EXPRESS_API_KEY=
BLUE_EXPRESS_API_SECRET=

# ====================================
# WHATSAPP BUSINESS API (PRODUCTION READY)
# ====================================
# Meta App Credentials
META_APP_ID=
META_APP_SECRET=

# WhatsApp Production Credentials
# Get from: https://developers.facebook.com/apps/YOUR_APP_ID/whatsapp-business/wa-dev-console/
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_ACCESS_TOKEN=  # Use permanent token (never expires)

# Webhook Security
WHATSAPP_WEBHOOK_VERIFY_TOKEN=  # Generate a random secure string

# AI Processing (Optional)
WHATSAPP_AI_ENABLED=false  # Set to 'true' to enable Claude AI processing
CLAUDE_API_KEY=  # Get from: https://console.anthropic.com/settings/keys

# ====================================
# SECURITY & MONITORING (RECOMMENDED)
# ====================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Cron Job Secret (for scheduled tasks)
CRON_SECRET=generate-a-random-secret-here

